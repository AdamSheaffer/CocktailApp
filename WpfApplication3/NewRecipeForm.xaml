<Window x:Class="CocktailApp.NewRecipeForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NewRecipeForm" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <Label>Drink Name</Label>
            <TextBox Name="DrinkName" Height="20" Width="120"></TextBox>
            <Label>Ingredients</Label>
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical">
                <TextBox Name="Ingredient1" Height="20" Width="120"></TextBox>
                    <TextBox Name="Ingredient2" Height="20" Width="120"></TextBox>
                    <TextBox Name="Ingredient3" Height="20" Width="120"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <TextBox Name="Ingredient4" Height="20" Width="120"></TextBox>
                    <TextBox Name="Ingredient5" Height="20" Width="120"></TextBox>
                    <TextBox Name="Ingredient6" Height="20" Width="120"></TextBox>
                </StackPanel>
            </StackPanel>
            <Label>Instructions</Label>
            <TextBox Width="250" Height="100"/>
        </StackPanel>
    </Grid>
</Window>
